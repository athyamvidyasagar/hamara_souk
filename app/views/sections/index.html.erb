<% if @categories && @ads %>
<%= render_breadcrumbs %>


<div id="show">
  <ul style="list-style-type: disc; padding-left: 25px">
    <% @categories.each do |cat| %>
    <li><%= cat.name %></li>
    <% end %>    
  </ul>  
</div>

<% @ads.each do |ad| %>
<%= render :partial => "shared/ad_details" , :locals => {:ad => ad}  %>  
<% end %>
<br/>
<div style="clear: both;"></div>
<%= will_paginate @ads , :renderer => RemoteLinkRenderer %>
<% else %>
<p> no ads</p>
<% end %> 